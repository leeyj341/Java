package chap04;

public class WhileExam01 {

	public static void main(String[] args) {
		
		int num = 0;
		int oddNum = 0;
		int i = 0;
		
		while(num <= 100)
		{
			i++;
			num += i;
			
			if(num % 2 != 0)
			{
				oddNum++;
			}
		}
		System.out.println("Че: " + num);
		System.out.println("ШІМіЧе: " + oddNum);
		System.out.println("ТІМіЧе: " + (num - oddNum));
	}

}
