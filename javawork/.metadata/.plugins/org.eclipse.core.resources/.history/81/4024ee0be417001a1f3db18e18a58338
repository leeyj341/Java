package chap04;

public class ForExam03 {

	public static void main(String[] args) {
		
		int num = 0;
		int oddNum = 0;
		
		for(int i = 1; i <= 100; i++)
		{
			num0 += i;
			if(i % 2 == 0)
				num2 += i;
			else
			{
				num1 += i;
			}
		}
		System.out.println("Че: " + num0);
		System.out.println("ШІМіЧе: " + num1);
		System.out.println("ТІМіЧе: " + num2);
	}

}
